<Page x:Class="TempoMonkey.TutorMode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
	  Title="TutorMode" xmlns:my="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers">

    <Canvas>
        <Label Content="" Height="72" HorizontalAlignment="Left" Margin="561,365,0,0" Name="tipsRightHandPush" VerticalAlignment="Top" Width="127"/>
        <Label Content="Done" Height="72" HorizontalAlignment="Left" Margin="561,443,0,0" Name="doneLabel" VerticalAlignment="Top" Width="133" FontSize="50" FontWeight="Bold" FontStyle="Italic" Foreground="#FFEBBE21" />

        <!--MediaElement Height="250" Width="300" HorizontalAlignment="Left" Margin="477,334,0,0" Name="tutorScreen" VerticalAlignment="Top"  LoadedBehavior="Manual"/>
        <Button Content="Back" Height="40" HorizontalAlignment="Left" Margin="30,12,0,0" Name="Back" VerticalAlignment="Top" Width="96" MouseEnter="Back_MouseEnter" MouseLeave="Back_MouseLeave"/>
        <Button Content="Play" Height="32" HorizontalAlignment="Left" Margin="530,296,0,0" Name="Play" VerticalAlignment="Top" Width="57" MouseEnter="Play_MouseEnter" />
        <Button Content="Stop" Height="32" HorizontalAlignment="Left" Margin="655,296,0,0" Name="Stop" VerticalAlignment="Top" Width="57" MouseEnter="Stop_MouseEnter" /-->
        <Label Content="Instructions" Height="80" HorizontalAlignment="Left" Margin="477,12,0,0" VerticalAlignment="Top" Width="295" FontSize="50" FontWeight="Bold" FontStyle="Italic" Foreground="#FFEBBE21" />
        <Label Content="" Height="144" HorizontalAlignment="Left" Margin="193,97,0,0" Name="Instructions" VerticalAlignment="Top" Width="557" FontSize="30" FontWeight="Bold" FontStyle="Italic" Foreground="#FFEBBE21" />

        <my:KinectSensorChooser Canvas.Left="211" Canvas.Top="167" Name="kinectSensorChooser" Width="328" />
        <my:KinectSkeletonViewer Canvas.Left="0" Canvas.Top="0" Width="640" Height="480" Name="kinectColorViewer1" 
                              Kinect="{Binding ElementName=kinectSensorChooser, Path=Kinect}" />

        <Rectangle Canvas.Left="15" Canvas.Top="45" Height="24" Name="SeekBar" Stroke="Black" Width="542" />
        <Label Canvas.Left="15" Canvas.Top="9" Content="Seek Bar" Height="31" Name="label1" Width="54" />
        <Ellipse Canvas.Left="254" Canvas.Top="17" Height="76" Name="SeekPos" Fill="RED" Width="14" />


        <Label Canvas.Left="612" Canvas.Top="431" Content="Pitch Bar" Height="30" Name="Box" Width="71" />
        <Rectangle Canvas.Left="646" Canvas.Top="65" Height="360" Name="PitchBar" Fill="Black" Width="20" />
        <Ellipse Canvas.Left="612" Canvas.Top="285" Height="24" Name="PitchPos" Fill="Red" Width="88" />

        <Label Canvas.Left="706" Canvas.Top="431" Content="Tempo Bar" Height="30" Name="label2" Width="71" />
        <Rectangle Canvas.Left="740" Canvas.Top="65" Fill="Black" Height="360" Name="Tempobar" Width="20" />
        <Ellipse Canvas.Left="706" Canvas.Top="285" Fill="Red" Height="24" Name="TempoPos" Width="88" />

        <Label Canvas.Left="10" Canvas.Top="376" Content="Debug Bar" Height="30" Name="DebugBox" Width="71" />
        <Rectangle Canvas.Left="44" Canvas.Top="10" Fill="Black" Height="360" Name="debugBar" Width="20" />
        <Ellipse Canvas.Left="10" Canvas.Top="230" Fill="Red" Height="24" Name="debugPos" Width="88" />

        <Label Canvas.Left="518" Canvas.Top="431" Content="Volume Bar" Height="30" Name="label5" Width="71" />
        <Rectangle Canvas.Left="552" Canvas.Top="65" Fill="Black" Height="360" Name="volubmeBar" Width="20" />
        <Ellipse Canvas.Left="518" Canvas.Top="285" Fill="Red" Height="24" Name="VolumePos" Width="88" />

        <Label Canvas.Left="396" Canvas.Top="135" Content="isPaused?" Height="30" Name="label3" Width="71" />
        <Ellipse Canvas.Left="388" Canvas.Top="105" Fill="Red" Height="24" Name="pause" Width="88" />

        <Rectangle Fill="#FFF4F4F5" Name="Border" Height="138" Canvas.Left="98" Stroke="Black" Canvas.Top="142" Width="602" Visibility="Hidden"/>
        <Button Content="Resume" Name="Resume" Canvas.Left="183" Canvas.Top="195" Width="152" Height="46" FontSize="30" Visibility="Hidden"
                MouseEnter="ResumeEnter" MouseLeave="ResumeLeave"/>
        <Button Content="Quit" Name="Quit" Canvas.Left="454" Canvas.Top="195" Width="152" Height="46" FontSize="30" Visibility="Hidden" 
                MouseEnter="QuitEnter" MouseLeave="QuitLeave"/>
    </Canvas>
</Page>
